<h1>Categorias</h1>

<table class="table table-dark table-sm table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Id</th>
      <th>Acciones</th>
    </tr>
  </thead>
<div class="pagination">
<%= will_paginate @categories,  previous_label: '<', next_label: '>', page_links: false %>
</div>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.id %></td>
        <td>
         <div class="btn-group">
        <%= link_to 'Editar', edit_admin_category_path(category), class:"btn btn-primary" %>
        <%= link_to 'Borrar', admin_category_path(category), method: :delete, data: { confirm: 'Estas seguro?' }, class:"btn btn-danger" %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Nueva categoria', new_admin_category_path, class:"btn btn-success" %>
